<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RoboYtesApp01" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="panelDataLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="panelData_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- element suwaka - fizyczny suwak -->
    <style name="panelData_seekbar_param">
        <item name="android:theme">@android:style/Widget.Material.SeekBar.Discrete</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:min">1</item>
        <item name="android:max">5</item>
        <item name="android:progress">1</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:thumb">@drawable/suwak_kulka</item>
    </style>

    <!-- element suwaka(opis parametru, liczba z suwaka) -->
    <style name="panelData_textView_param">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- element listy -->
    <style name="panelData_spinner_medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Strzalki do poruszania robotem-->
    <!--         <item name="android:scaleType">fitCenter</item> -->
    <style name="btnKierunek">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Przyciski funkcyjne -->
    <!--         <item name="android:scaleType">fitCenter</item> -->
    <style name="btnFunkcyjny">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>